<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F0F0"
    android:padding="32dp"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"> <TextView
    android:text="@string/iniciar_sesi_n"
    android:textSize="36sp"
    android:textStyle="bold"
    android:textColor="#1E272E"
    android:layout_gravity="start"
    android:layout_marginBottom="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>


        <TextView
            android:text="@string/que_bueno_verte_de_nuevo"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etCorreo"
            android:hint="@string/correo_electr_nico"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etContrasena"
            android:hint="@string/contrase_a"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/recuperarcontrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recupera_tu_contrase_a"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>
        <Button
            android:id="@+id/btGoole"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="@string/google"
            app:cornerRadius="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:icon="@drawable/ic_google"
            app:iconSize="20sp"
            app:iconTint="@null"
            app:strokeColor="@color/azul"
            app:strokeWidth="2dp" />
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/azul"
            android:padding="16dp"
            app:cornerRadius="10dp"
            android:text="@string/iniciar_sesi_n"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/cancelar"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRegistrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/no_tienes_cuenta_reg_strate"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>
</RelativeLayout>